<div class="container kitty-container">
  {{kitties-header step=3}}
  <div class="kitty-text">
    <img class="kitty-image" src={{model.imageUrl}} style={{model.bgStyle}}>
    <p>{{t "kitty-exchange.3-line1"}}</p>
    <p>{{t "kitty-exchange.3-line2" kittyName=model.name htmlSafe=true}}</p>
    <button type="button" class="btn btn-primary btn-lg" {{action "transferKittyClicked" model.id}}>{{t "kitty-exchange.3-button"}}</button>
  </div>
</div>
