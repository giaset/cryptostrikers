{{#if (gt cards.length 1)}}
  <ol class="carousel-indicators">
    {{#each cards as |card index|}}
      <li data-target="#cardCarousel" data-slide-to={{index}} class={{if (eq index 0) "active"}}></li>
    {{/each}}
  </ol>
{{/if}}
<div class="carousel-inner">
  {{#each cards as |card index|}}
    <div class="carousel-item{{if (eq index 0) " active"}}">
      <img class="card-carousel-image my-5" src={{checklistItem.filepath}}>
    </div>
  {{else}}
    <div class="carousel-item active">
      <img class="card-carousel-image my-5" src={{checklistItem.filepath}}>
    </div>
  {{/each}}
  {{#if (gt cards.length 1)}}
    <a class="carousel-control-prev" href="#cardCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#cardCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  {{/if}}
</div>
