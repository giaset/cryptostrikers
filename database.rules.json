{
  "rules": {
    "activities": {
      "$activityId": {
        ".write": "auth !== null && (!data.exists() || auth.uid === data.child('user').val()) && newData.exists()"
      }
    },
    "countries": {
      ".read": true
    },
    "leads": {
      "$leadId": {
        ".read": true,
        ".write": "!data.exists()"
      }
    },
    "players": {
      ".read": true
    },
    "stats": {
      ".read": true
    },
    "userMetadata": {
      "$uid": {
        ".read": "auth !== null",
        ".write": "auth.uid === $uid"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    }
  }
}
